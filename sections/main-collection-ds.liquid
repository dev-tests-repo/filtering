{%- assign s = section.settings -%}
<div class="main-collection page-width">
  {{ 'main-collection-ds.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'collection-filters-ds.js' | asset_url }}" defer="defer"></script>

  <div class="main-collection__wrapper">
    <div class="main-collection__container">
      <div class="main-collection__products js-products-container" data-section-id="{{- section.id -}}">
        {%- paginate collection.products by s.products_per_page -%}
          <div class="main-collection__products-grid grid grid--{{- s.columns_desktop -}}-col-desktop grid--{{- s.columns_mobile -}}-col-tablet-down">
            {%- for product in collection.products -%}
              <div class="grid__item">
                {%- render 'card-product', card_product: product, section_id: section.id -%}
              </div>
            {%- endfor -%}
          </div>

          {%- if paginate.pages > 1 -%}
            {%- render 'pagination', paginate: paginate, anchor: '' -%}
          {%- endif -%}
        {%- endpaginate -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Main collection",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 2,
      "max": 40,
      "step": 1,
      "default": 8,
      "label": "Products per page"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Number of columns on desktop"
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2,
      "label": "Number of columns on mobile"
    }
  ]
}
{% endschema %}
